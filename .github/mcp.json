{
  "mcp_url": "http://127.0.0.1:8080",
  "github": {
    "command": "docker",
    "args": [
      "run",
      "-i",
      "--rm",
      "-e",
      "GITHUB_PERSONAL_ACCESS_TOKEN",
      "-e",
      "GITHUB_HOST",
      "-p",
      "8080:8080",
      "ghcr.io/github/github-mcp-server"
    ],
    "env": {
      "GITHUB_PERSONAL_ACCESS_TOKEN": "${input:github_token}",
      "GITHUB_HOST": "https://<your GHES or ghe.com domain name>"
    }
  }
}
